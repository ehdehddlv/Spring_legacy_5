<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.iu.s5.member.MemberDAO">
	
	<select id="memberCount" parameterType="com.iu.s5.member.page.Pager" resultType="java.lang.Long">
		select count(id) from member
		<where>
			<if test="mkind == 'mi'">
				id like '%'||#{msearch}||'%'
			</if>
			<if test="mkind == 'mn'">
				name like '%'||#{msearch}||'%'
			</if>
			<if test="mkind == 'mp'">
				phone like '%'||#{msearch}||'%'
			</if>
			<if test="mkind == 'me'">
				email like '%'||#{msearch}||'%'
			</if>
		</where>
	</select>
	
	
	<select id="memberList" parameterType="com.iu.s5.member.page.Pager" resultType="com.iu.s5.member.MemberVO">
		select * from 
		(select N.*, rownum R from 
		(select * from member
		<choose>
			<when test="mkind == 'mi'">
				id 
			</when>
			<when test="mkind == 'mn'">
				name
			</when>
			<when test="mkind == 'mp'">
				phone
			</when>
			<otherwise>
				email
			</otherwise>
		</choose>
		like '%'||#{msearch}||'%' ) N)
		where r between #{startRow} and #{lastRow}
	
	</select>

</mapper>
